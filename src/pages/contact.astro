---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const metadata = {
  title: 'Contact',
};

const { isDark = false, bg = await Astro.slots.render('bg') } = Astro.props;
---

<Layout metadata={metadata}>
  <WidgetWrapper id="contact" isDark={isDark} containerClass={`max-w-7xl mx-auto`} bg={bg}>
    <Headline title="Contact Us" />
    <iframe
      allowtransparency="true"
      style="min-height:1000px; height:inherit; overflow:auto;"
      width="100%"
      id="contactform123"
      name="contactform123"
      src="https://form.123formbuilder.com/my-contact-form-3172452.html?customVars123=yes&hasEmbedFormStyle=1"
    >
    </iframe>
  </WidgetWrapper>
</Layout>
