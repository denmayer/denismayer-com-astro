---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import djMixerImage from '../../assets/images/2022/04/IMG_2031.jpeg';

const metadata = {
  title: 'DJ Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Content
    title="DJ Services"
    subtitle=""
    isReversed
    image={{
      src: djMixerImage,
      alt: 'DJ Services',
    }}
    items={[
      {
        title: 'EDM',
      },
      {
        title: 'House',
      },
      {
        title: 'Pop',
      },
      {
        title: 'Hip Hop',
      },
      {
        title: 'Alternative',
      },
      {
        title: 'Classic Rock',
      },
      {
        title: 'And more...',
      },
    ]}
  >
    <Fragment slot="content">
      Based in Rockland, NY, Denis Mayer DJ Services is available for clubs, parties, and special occasions. We cover
      all genres including:
    </Fragment>
  </Content>
</Layout>
